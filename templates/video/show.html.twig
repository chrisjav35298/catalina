{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}
{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-5">Nuestros Videos</h1>
    <div class="row">
        <div class="col-md-6 mb-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-body p-0">
                    <!-- Video tag with controls -->
                    <video class="card-img-top rounded-top" width="100%" height="200" controls>
                        <source src="{{ video.url }}" type="video/mp4">
                        Tu navegador no soporta el elemento de video.
                    </video>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ video.titulo }}</h5>
                    <p class="card-text">{{ video.descripcion }}</p> <!-- Ajusta aquÃ­ 'description' si es necesario -->
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
