{% extends 'base.html.twig' %}

{% block title %}Noticia index{% endblock %}

{% block body %}
    <h1>Noticia index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>DescripcionCorta</th>
                <th>DescripcionDetallada</th>
                <th>Imagen</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for noticium in noticias %}
            <tr>
                <td>{{ noticium.id }}</td>
                <td>{{ noticium.titulo }}</td>
                <td>{{ noticium.descripcionCorta }}</td>
                <td>{{ noticium.descripcionDetallada }}</td>
                <td>
                    <img src="{{ asset('uploads/' ~ noticium.imagen ) }}" alt="Imagen" style="width: 100px;">
                </td>
                <td>
                    <a href="{{ path('app_noticia_show', {'id': noticium.id}) }}">show</a>
                    <a href="{{ path('app_noticia_edit', {'id': noticium.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
         
    </table>

    <a href="{{ path('app_noticia_new') }}">Create new</a>
    <br>  <br>
     <a href="{{ path('app_home') }}">Home</a>
{% endblock %}
