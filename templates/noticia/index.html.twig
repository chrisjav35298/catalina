{% extends 'base.html.twig' %}

{% block title %}Noticias{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Listado de Noticias</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Descripción Corta</th>
                    <th>Descripción Detallada</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for noticium in noticias %}
                <tr>
                    <td>{{ noticium.id }}</td>
                    <td>{{ noticium.titulo }}</td>
                    <td>{{ noticium.descripcionCorta }}</td>
                    <td>{{ noticium.descripcionDetallada }}</td>
                    <td>
                        <img src="{{ asset('uploads/' ~ noticium.imagen ) }}" alt="Imagen de {{ noticium.titulo }}" style="width: 100px; height: auto; object-fit: cover;">
                    </td>
                    <td>
                        <a href="{{ path('app_noticia_show', {'id': noticium.id}) }}" class="btn btn-info btn-sm">Ver</a>
                        <a href="{{ path('app_noticia_edit', {'id': noticium.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No se encontraron registros</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_noticia_new') }}" class="btn btn-primary">Crear Nueva Noticia</a>
            <a href="{{ path('app_home') }}" class="btn btn-secondary">Volver al Inicio</a>
        </div>
    </div>
{% endblock %}
