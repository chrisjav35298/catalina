{% extends 'base.html.twig' %}

{% block title %}Noticia{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center">Detalle de la Noticia</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row" class="text-end">Id</th>
                            <td>{{ noticium.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-end">Título</th>
                            <td>{{ noticium.titulo }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-end">Descripción Corta</th>
                            <td>{{ noticium.descripcionCorta }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-end">Descripción Detallada</th>
                            <td>{{ noticium.descripcionDetallada }}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-end">Imagen</th>
                            <td>
                                <img src="{{ asset('uploads/' ~ noticium.imagen) }}" alt="Imagen" class="img-thumbnail" style="width: 200px;">
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_noticia_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la lista
                    </a>
                    <a href="{{ path('app_noticia_edit', {'id': noticium.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    {{ include('noticia/_delete_form.html.twig', { class: 'd-inline' }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
