{% extends 'base.html.twig' %}

{% block title %}Comunidad{% endblock %}

{% block body %}
    <h1>Comunidad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comunidad.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ comunidad.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ comunidad.descripcion }}</td>
            </tr>
            <tr>
                <th>VideoUrl</th>
                <td>{{ comunidad.videoUrl }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ comunidad.activo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comunidad.createdAt ? comunidad.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comunidad_index') }}">back to list</a>

    <a href="{{ path('app_comunidad_edit', {'id': comunidad.id}) }}">edit</a>

    {{ include('comunidad/_delete_form.html.twig') }}
{% endblock %}
