{% extends 'base.html.twig' %}

{% block title %}Comunidad index{% endblock %}

{% block body %}
    <h1>Comunidad index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>VideoUrl</th>
                <th>Activo</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comunidad in comunidads %}
            <tr>
                <td>{{ comunidad.id }}</td>
                <td>{{ comunidad.titulo }}</td>
                <td>{{ comunidad.descripcion }}</td>
                <td>{{ comunidad.videoUrl }}</td>
                <td>{{ comunidad.activo ? 'Yes' : 'No' }}</td>
                <td>{{ comunidad.createdAt ? comunidad.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_comunidad_show', {'id': comunidad.id}) }}">show</a>
                    <a href="{{ path('app_comunidad_edit', {'id': comunidad.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comunidad_new') }}">Create new</a>
{% endblock %}
