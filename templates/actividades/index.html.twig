{% extends 'base.html.twig' %}

{% block title %}Actividades{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Listado de Actividades</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Descripción Corta</th>
                    <th>Descripción Larga</th>
                    <th>Imagen Destacada</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for actividade in actividades %}
                <tr>
                    <td>{{ actividade.id }}</td>
                    <td>{{ actividade.titulo }}</td>
                    <td>{{ actividade.descripcionCorta }}</td>
                    <td>{{ actividade.descripcionLarga }}</td>
                    <td>
                        <img src="{{ asset('uploads/' ~ actividade.imagenDestacada ) }}" alt="Imagen de {{ actividade.titulo }}" style="width: 100px; height: auto; object-fit: cover;">
                    </td>
                    <td>
                        <a href="{{ path('app_actividades_show', {'id': actividade.id}) }}" class="btn btn-info btn-sm">Ver</a>
                        <a href="{{ path('app_actividades_edit', {'id': actividade.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No se encontraron registros</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_actividades_new') }}" class="btn btn-primary">Crear Nueva Actividad</a>
            <a href="{{ path('app_home') }}" class="btn btn-secondary">Volver al Inicio</a>
        </div>
    </div>
{% endblock %}
{% block footer %}
{{parent()}}
{% endblock %}