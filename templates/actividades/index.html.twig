{% extends 'base.html.twig' %}

{% block title %}Actividades index{% endblock %}

{% block body %}
    <h1>Actividades index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>DescripcionCorta</th>
                <th>DescripcionLarga</th>
                <th>ImagenDestacada</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actividade in actividades %}
            <tr>
                <td>{{ actividade.id }}</td>
                <td>{{ actividade.titulo }}</td>
                <td>{{ actividade.descripcionCorta }}</td>
                <td>{{ actividade.descripcionLarga }}</td>
                <td>
                        <img src="{{ asset('uploads/' ~ actividade.imagenDestacada ) }}" alt="Imagen" style="width: 100px;">
                </td>
                <td>
                    <a href="{{ path('app_actividades_show', {'id': actividade.id}) }}">show</a>
                    <a href="{{ path('app_actividades_edit', {'id': actividade.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actividades_new') }}">Create new</a>
     <br>  <br>
     <a href="{{ path('app_home') }}">Home</a>
{% endblock %}
