{% extends 'base.html.twig' %}

{% block title %}Ley{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center">Detalle de la ley</h1>

    <div class="card">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
            <tr>
                <th scope="row" class="text-end">Id</th>
                <td>{{ ley.id }}</td>
            </tr>
            <tr>
                <th scope="row" class="text-end">Titulo</th>
                <td>{{ ley.titulo }}</td>
            </tr>
            <tr>
                <th scope="row" class="text-end">Descripcion</th>
                <td>{{ ley.descripcion }}</td>
            </tr>
            <tr>
                <th scope="row" class="text-end">FechaSancion</th>
                <td>{{ ley.fechaSancion ? ley.fechaSancion|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th scope="row" class="text-end">FechaPromulgacion</th>
                <td>{{ ley.fechaPromulgacion ? ley.fechaPromulgacion|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th scope="row" class="text-end">Activo</th>
                <td>{{ ley.activo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-between mt-3">
    <a href="{{ path('app_ley_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la lista</a>

    <a href="{{ path('app_ley_edit', {'id': ley.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil"></i>Editar</a>

    {{ include('ley/_delete_form.html.twig') }}
    </div>
{% endblock %}
