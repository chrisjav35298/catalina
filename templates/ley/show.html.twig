{% extends 'base.html.twig' %}

{% block title %}Ley{% endblock %}

{% block body %}
    <h1>Ley</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ley.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ ley.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ ley.descripcion }}</td>
            </tr>
            <tr>
                <th>FechaSancion</th>
                <td>{{ ley.fechaSancion ? ley.fechaSancion|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FechaPromulgacion</th>
                <td>{{ ley.fechaPromulgacion ? ley.fechaPromulgacion|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ ley.activo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ley_index') }}">back to list</a>

    <a href="{{ path('app_ley_edit', {'id': ley.id}) }}">edit</a>

    {{ include('ley/_delete_form.html.twig') }}
{% endblock %}
