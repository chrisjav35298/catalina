{% extends 'base.html.twig' %}

{% block title %}Equipo{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Listado integrantes</h1>
        <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Staff</th>
                <th>Puesto</th>
                <th>Foto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipo in equipos %}
            <tr>
                <td>{{ equipo.id }}</td>
                <td>{{ equipo.nombre }}</td>
                <td>{{ equipo.staff }}</td>
                <td>{{ equipo.puesto }}</td>
                <td>{{ equipo.imagen }}</td>
                <td>
                    <a href="{{ path('app_equipo_show', {'id': equipo.id}) }}" class="btn btn-info btn-sm">Ver</a>
                    <a href="{{ path('app_equipo_edit', {'id': equipo.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_equipo_new') }}" class="btn btn-primary">Crear nuevo</a>
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Volver al Inicio</a>

    </div>
</div>
{% endblock %}
{% block footer %}
{{parent()}}
{% endblock %}