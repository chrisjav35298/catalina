{% extends 'base.html.twig' %}

{% block title %}Equipo index{% endblock %}

{% block body %}
    <h1>Equipo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Staff</th>
                <th>Puesto</th>
                <th>Foto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipo in equipos %}
            <tr>
                <td>{{ equipo.id }}</td>
                <td>{{ equipo.nombre }}</td>
                <td>{{ equipo.staff }}</td>
                <td>{{ equipo.puesto }}</td>
                <td>{{ equipo.imagen }}</td>
                <td>
                    <a href="{{ path('app_equipo_show', {'id': equipo.id}) }}">show</a>
                    <a href="{{ path('app_equipo_edit', {'id': equipo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipo_new') }}">Create new</a>
{% endblock %}
