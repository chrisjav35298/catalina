{% extends 'base.html.twig' %}

{% block title %}CarruselRefugio index{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Listado de items</h1>
    <table class="table table-striped table-bordered">
    <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Subtitulo</th>
                <th>Link</th>
                <th>Esta activo?</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carrusel_refugio in carrusel_refugios %}
            <tr>
                <td>{{ carrusel_refugio.id }}</td>
                <td>{{ carrusel_refugio.titulo }}</td>
                <td>{{ carrusel_refugio.subtitulo }}</td>
                <td>{{ carrusel_refugio.link }}</td>
                <td>{{ carrusel_refugio.isActive ? 'Si' : 'No' }}</td>
                <td>
                    <img src="{{ asset('uploads/' ~ carrusel_refugio.image) }}" alt="Image" class="img-thumbnail" style="width: 100px;">
                </td>
                <td>
                    <a href="{{ path('app_carrusel_refugio_show', {'id': carrusel_refugio.id}) }}" class="btn btn-info btn-sm">Ver</a>
                    <a href="{{ path('app_carrusel_refugio_edit', {'id': carrusel_refugio.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_carrusel_refugio_new') }}" class="btn btn-primary">Crear nuevo</a>
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Volver al Inicio</a>
    </div>
</div>
{% endblock %}
